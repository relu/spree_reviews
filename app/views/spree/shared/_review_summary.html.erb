<div id="reviews">
  <%= render :partial => 'spree/shared/rating', :locals => {:product => @product, :review => 0} %>
  <% for review in (Spree::Reviews::Config[:track_locale] ? @product.reviews.localized(I18n.locale) : @product.reviews).approval_filter.preview %>
    <%= render :partial => 'spree/shared/review', :locals => {:review => review} %>
  <% end %>
  <% if Spree::Reviews::Config[:feedback_rating] && (!Spree::Reviews::Config[:require_login] || spree_current_user || !Spree::Reviews::Config[:always_show_create]) %>
    <%= link_to Spree.t('write_your_own_review'), new_product_review_path(@product), :class => "button" %>
  <% end %>
</div>

